= wrap_layout :layout do
  .row.row--a
    .cell
      = partial "shared/navigation"
      .g
        .g-b.g-b--s--1of3.g-b--m--2of5
          = image_tag("#{current_page.data.image}")
        .g-b.g-b--s--2of3.g-b--m--3of5.ptm
          %p.breadcrumbs
            = link_to "Home", "/"
            &bull;
            = link_to "Guides", "/guides/"
            &bull; Current Guide
          %h2.mbm= current_page.data.title
          %p.fsl= current_page.data.description
          .toc
            = table_of_contents(current_page)
  .row
    %canvas.polygons.polygons--drapes
    .cell.well--l
      .guide
        = yield
