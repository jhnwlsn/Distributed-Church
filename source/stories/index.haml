.row.row--a
  .cell
    = partial "shared/navigation"
  .cell.well
    .g
      .g-b.g-b--m--1of2
        %h1 Stories
      .g-b.g-b--m--1of2
        %p.mts= lorem.sentences 4

.hero.hero--stories
  %canvas#hero-drapes
  .cell
    .hero-content
      - sitemap.resources.select{|g| g.data.type == "story"}.each_with_index do |guide, index|
        - if index == 1
          %h4 Featured Story
          %h3= link_to guide.data.title, guide.url
  %canvas#hero-mountains

.row
  .cell.well
    - sitemap.resources.select{|g| g.data.type == "story"}.each do |guide|
      %h3= link_to guide.data.title, guide.url
